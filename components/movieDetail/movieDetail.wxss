@import '/zanui/index.wxss';

.movie-cover {
    width: 540rpx;
    height: 806rpx;
    margin: 0 auto;
    display: block;
}

.view-background {
    background-color: #f4f6f9;
}

.margin {
    margin: 30rpx 0 90rpx;
}

.title {
    font-size: 50rpx;
    margin: 20rpx 0;
}

.description {
    font-size: 25rpx;
}

.square {
    width: 150rpx;
    height: 150rpx;
    margin: 44rpx auto 24rpx;
    padding: 10rpx;
    box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.2);
}

.score {
    background-color: #ffffff;
    font-size: 25rpx;
    text-align: center;
}

.average {
    font-size: 70rpx;
}

.summary {
    font-size: 28rpx;
}

.inline {
    display: inline-block;
}

.stage-photo-container {
    white-space: nowrap;
}

.stage-photo-view {
    width: 500rpx;
    height: 360rpx;
    margin: 10rpx;
}

.stage-photo {
    width: 100%;
    height: 100%;
}

.review-margin {
    margin: 20rpx 0;
}